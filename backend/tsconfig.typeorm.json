{
  "extends": "./tsconfig.dev.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "allowJs": false,
    "isolatedModules": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules", "**/*.js", "**/*.js.map", "**/*.d.ts"]
}
