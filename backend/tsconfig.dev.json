{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "rootDirs": ["./src", "../shared/src"],
    "baseUrl": "./",
    "paths": {
      "@rflp/shared": ["../shared/src"],
      "@rflp/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*.ts", "../shared/src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test", "**/*.spec.ts"]
}
