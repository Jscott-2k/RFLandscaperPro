# Environment Configuration
# Copy this file to the appropriate `.env` for your environment:
# `.env.development` for local development, `.env.test` for testing,
# or `.env.production` for production deployments. These files are
# git-ignored to keep secrets out of version control.
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_NAME=rflandscaperpro

# Authentication
# JWT_SECRET is required; the application will not start without it
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Swagger Documentation
SWAGGER_USER=admin
SWAGGER_PASSWORD=admin

# Optional: Logging
LOG_LEVEL=debug

# Caching (in milliseconds)
CACHE_TTL=60000
CACHE_MAX=100

# Throttling
THROTTLE_TTL=60
THROTTLE_LIMIT=20

# Email Configuration (for future use)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
SMTP_FROM=noreply@example.com

# File Upload (for future use)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
