{
  "name": "rflandscaperpro",
  "private": true,
  "engines": {
    "node": ">=22.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.34.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^60.0.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0"
  },
  "scripts": {
    "dev": "concurrently \"npm --prefix backend run start:dev\" \"npm --prefix frontend start\"",
    "dev:compose": "bash development.sh",
    "down": "bash down.sh",
    "build": "npm --prefix shared run build && npm --prefix backend run build && npm --prefix frontend run build:browser",
    "build:shared": "npm --prefix shared run build",
    "build:backend": "npm --prefix backend run build",
    "build:frontend": "npm --prefix frontend run build:browser",
    "migration:generate": "npm --prefix backend run migration:generate",
    "migration:run": "npm --prefix backend run migration:run",
    "migration:revert": "npm --prefix backend run migration:revert",
    "seed": "npm --prefix backend run seed",
    "seed:drop": "npm --prefix backend run seed:drop",
    "lint": "eslint \"backend/src/**/*.ts\" \"backend/test/**/*.ts\" \"shared/src/**/*.ts\" \"frontend/src/**/*.ts\" --cache --cache-location .eslintcache --fix",
    "lint:types": "eslint . --ext .ts --config eslint.types.config.mjs",
    "format": "prettier --write ."
  }
}
